<!DOCTYPE html>


<html lang="pt-BR">
@model ModelListaProdutos;
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../images/estoque_icon.jpeg" type="image/jpeg">
    <title>Estoque - Celebi System</title>
    <link rel="stylesheet" href="../css/estoque.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body>
    <div class="navigation">
        <ul>
            <li class="list active">
                <a href="../Home">
                    <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                    <span class="title">Início</span>
                </a>
            </li>
            <li class="list">
                <a href="../Caixa">
                    <span class="icon"><ion-icon name="cash-outline"></ion-icon></span>
                    <span class="title">Caixa</span>
                </a>
            </li>
            <li class="list">
                <a href="../Estoque">
                    <span class="icon"><ion-icon name="cube-outline"></ion-icon></span>
                    <span class="title">Estoque</span>
                </a>
            </li>
            <li class="list">
                <a href="../Contas">
                    <span class="icon"><ion-icon name="folder-outline"></ion-icon></span>
                    <span class="title">Contas</span>
                </a>
            </li>
        </ul>
    </div>
    <main class="table">
        <section class="table_header">
            <h1>Estoque de Produtos</h1>
            <button onclick="abrirModal(0)" type="button" class="btn">Adicionar Produto</button>
            <div class="search-box">    
                <input class="search-txt" id="textoProcurar"type="text" name="" placeholder="Faça sua pesquisa">
                <button class="btn" id="btnProcurar"> Buscar</button>
            </div>
        </section>

        <section class="table_body">
            <table>
                <thead>
                    <tr>
                        <th> ID </th>
                        <th> Produto </th>
                        <th> Valor </th>
                        <th> Quantidade </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach(var Produto in Model.produtos)
                    {
                    <tr>
                        <td class="id">@Produto.Produtoid</td>
                        <td>@Produto.Descricao</td>
                        <td>@string.Format("{0:C2}",Produto.Preco)</td>
                        <td>@Produto.Quantidadeemestoque</td>   
                    <td>
                        <button onclick="abrirModal(@Produto.Produtoid)" type="submit" class="table-btn">Editar</button>
                        <button onclick="deleteProduto(@Produto.Produtoid)"class="table-btn2 btn btn-delete">Excluir</button>
                    </td>
                    </tr>
                    }
                    
                </tbody>
            </table>
        </section>
    </main>
    <div class="janela-modal" id="janela-modal">
        <div class="modal">
            <button class="fechar" id="fechar">X</button>
            <form id="formSalvar">
                <label for="m-id">ID</label>
                <input id="m-id" type="text" readonly />

                <label for="m-produto">Produto</label>
                <input id="m-produto" type="text" required  />

                <label for="m-preco">Preço</label>
                <input id="m-preco" class="dinheiro" required />

                <label for="m-quantidade">Quantidade</label>
                <input id="m-quantidade" class="numero" required />

                <button onclick="saveProduto()"id="btnAdicionar">Salvar</button>
            </form>
        </div>
    </div>
   
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="~/js/jquery.mask.js"> </script>
    <script src="~/js/estoque.js"></script>
    <script src="~/js/site.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body> 

</html>